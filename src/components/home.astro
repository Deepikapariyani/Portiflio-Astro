<script></script>
<style>
  .blob {
    background-image: url("../../public/Deepika.jpg");

    background-size: cover;
    background-position: center center;
    box-shadow: 5px 10px 10px 10px rgba(0, 0, 0, 0.089);
    animation: animate 5s ease-in-out infinite;
    transition: all 3s ease-in-out;
  }
  @keyframes animate {
    0%,
    100% {
      border-radius: 50% 40% 30% 70% / 60% 30% 70% 40%;
    }
    50% {
      border-radius: 30% 60% 70% 40% / 50% 60% 30% 60%;
    }
  }
  /* ---------------------------- */
  // GENERAL STYLES

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    background: linear-gradient(36deg, rgba(0, 0, 0, 0.863), #00002d);
  }

  .button-container {
    text-decoration: none;
    display: inline-block;

    letter-spacing: 1px;
    box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.15);
    transition: 0.5s all ease-in-out;
    &:hover {
      cursor: pointer;
      background: white;
      animation: none;
      //animation-play-state: paused;
    }
  }

  .button {
  }

  .button-wiggle {
    animation: wiggle 4s 2s infinite;
  }

  @keyframes scrolldown {
    0% {
      transform: translateY(20%) rotate(45deg);
      opacity: 0.7;
    }
    50% {
      transform: translateY(0%) rotate(45deg);
      opacity: 0.2;
    }
    100% {
      transform: translateY(20%) rotate(45deg);
      opacity: 0.7;
    }
  }

  @keyframes wiggle {
    5%,
    50% {
      transform: scale(1);
    }
    10% {
      transform: scale(0.9);
    }
    15% {
      transform: scale(1.15);
    }
    20% {
      transform: scale(1.15) rotate(-5deg);
    }
    25% {
      transform: scale(1.15) rotate(5deg);
    }
    30% {
      transform: scale(1.15) rotate(-3deg);
    }
    35% {
      transform: scale(1.15) rotate(2deg);
    }
    40% {
      transform: scale(1.15) rotate(0);
    }
  }
  :root {
    --color: rgba(255, 255, 255, 0.918);
  }

  .container_mouse {
    text-align: center;
    color: var(--color);
    /* padding-top: 3rem; */
    cursor: pointer;
  }

  .container_mouse .mouse-btn {
    margin: 5px auto;
    width: 30px;
    height: 50px;
    border: 3px solid var(--color);
    border-radius: 30px;
    display: flex;
  }

  .container_mouse .mouse-btn .mouse-scroll {
    display: block;
    width: 10px;
    height: 10px;
    background: linear-gradient(
      170deg,
      rgba(255, 255, 255, 0.918),
      rgb(255, 255, 255)
    );
    border-radius: 50%;
    margin: auto;
    animation: scrolling 3s linear infinite;
  }

  @keyframes scrolling {
    0% {
      opacity: 0;
      transform: translateY(-20px);
    }

    100% {
      opacity: 1;
      transform: translateY(20px);
    }
  }
</style>
